<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/location_textView"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/budget_textView"
        android:layout_below="@+id/budget_textView"
        android:layout_marginTop="71dp"
        android:text="Location" />

    <TextView
        android:id="@+id/budget_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="56dp"
        android:text="Budget"
        android:textStyle="bold"
        android:textAppearance="@android:style/TextAppearance.Material.Small" />

    <Spinner
        android:id="@+id/budget_spinner"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/budget_textView"
        android:layout_alignStart="@+id/budget_textView" />

    <Spinner
        android:id="@+id/location_spinner"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:scrollbarSize="50dp"
        android:layout_below="@+id/location_textView"

        android:layout_alignStart="@+id/location_textView" />

    <Spinner
        android:id="@+id/type_spinner"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:scrollbarSize="50dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/location_spinner" />

    <TextView
        android:id="@+id/type_textView"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"
        android:layout_above="@+id/type_spinner"
        android:layout_alignStart="@+id/type_spinner" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/type_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:text="Search" />



</RelativeLayout>